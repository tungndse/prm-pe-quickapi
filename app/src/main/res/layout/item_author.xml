<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewAuthorAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Address"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/textViewAuthorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Email"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/textViewAuthorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Phone"
        android:paddingTop="4dp"/>
</LinearLayout>
